{
   "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "baseUrl": "./src",
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowJs": false,
      "checkJs": false,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "declaration": true,
      "removeComments": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist"]
}
